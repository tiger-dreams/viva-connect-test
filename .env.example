# LIFF Configuration
VITE_LIFF_ID=your-liff-id-here

# PlanetKit Evaluation Environment
VITE_PLANETKIT_EVAL_SERVICE_ID=7bd3ca660f18
VITE_PLANETKIT_EVAL_API_KEY=your-eval-api-key
VITE_PLANETKIT_EVAL_API_SECRET=your-eval-api-secret

# PlanetKit Real Environment (if needed)
VITE_PLANETKIT_REAL_SERVICE_ID=your-real-service-id
VITE_PLANETKIT_REAL_API_KEY=your-real-api-key
VITE_PLANETKIT_REAL_API_SECRET=your-real-api-secret

# Admin Access Control
# Comma-separated list of LINE user IDs (UIDs) allowed to access /admin/logs
# Example: VITE_ADMIN_UIDS=Uxxxxx,Uyyyyy,Uzzzz
VITE_ADMIN_UIDS=

# LINE Messaging API (for sending invites via Official Account)
# OAuth 2.0 client credentials: Channel ID와 Secret으로 자동 토큰 발급
LINE_CHANNEL_ID=your-line-channel-id
LINE_CHANNEL_SECRET=your-line-channel-secret

# Agent Call Configuration
# Agent Call uses the same API Key/Secret as PlanetKit (VITE_PLANETKIT_EVAL_API_KEY/SECRET)
PLANETKIT_AGENT_CALL_BASE_URL=https://vpnx-stn-api.line-apps-rc.com

# Audio File Content IDs (upload to LINE Planet Console first)
# After uploading audio files to LINE Planet Console, paste the contentIds here
VITE_PLANETKIT_AUDIO_FILE_GREETING=contentId-for-greeting-audio
VITE_PLANETKIT_AUDIO_FILE_RINGING=contentId-for-ringing-audio
VITE_PLANETKIT_AUDIO_FILE_WAITING=contentId-for-waiting-audio

# Agent Call Settings
# Set to 'true' to enable mock mode (no actual PlanetKit API calls)
PLANETKIT_AGENT_CALL_MOCK_MODE=false
PLANETKIT_AGENT_CALL_TIMEOUT=60000

# Cron Job Security
# Generate a random secret for cron authentication: openssl rand -base64 32
CRON_SECRET=your-cron-secret-here

# Upstash QStash (for delayed retry execution)
# Get your token from https://console.upstash.com/qstash
QSTASH_TOKEN=your-qstash-token-here
QSTASH_CURRENT_SIGNING_KEY=your-signing-key-here
QSTASH_NEXT_SIGNING_KEY=your-next-signing-key-here
